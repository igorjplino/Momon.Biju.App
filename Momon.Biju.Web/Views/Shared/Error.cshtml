@model ErrorViewModel
@{
    ViewBag.Title = "Erro";
    Layout = "_Layout";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f8f9fa;">
    <div style="text-align: center; max-width: 600px; padding: 2rem; background-color: #ffffff; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border-radius: 10px;">
        <h1 style="color: #dc3545; font-size: 2.5rem; margin-bottom: 1rem;">
            Ups! Algo correu mal.
        </h1>
        <p style="color: #6c757d; font-size: 1.2rem; margin-bottom: 2rem;">
            Pedimos desculpa pelo incómodo. Parece que ocorreu um problema do nosso lado.
        </p>
        <p style="color: #6c757d; font-size: 1rem; margin-bottom: 2rem;">
            Se o problema persistir, por favor contacte a nossa equipa de suporte ou tente atualizar a página.
        </p>
        <button onclick="goBack()" style="padding: 0.75rem 1.5rem; font-size: 1rem; color: #fff; background-color: #007bff; border: none; border-radius: 5px; cursor: pointer;">
            Voltar
        </button>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>