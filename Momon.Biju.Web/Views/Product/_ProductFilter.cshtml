@model ProductFilter

@using (Html.BeginForm("Filter", "Product", FormMethod.Get, new { id = "filter-form" }))
{
    <div class="card p-3 mb-3">
        <h5>Filtrar Produtos</h5>

        <div class="form-group">
            <label>Buscar</label>
            <input type="text" name="SearchNae" class="form-control"
                   value="@Model.Name"/>
        </div>

        <div class="form-group mt-2">
            <label>Categorias</label>

            @foreach (var cat in Model.Categories)
            {
                <input class="form-check-input" type="checkbox" @(cat.Id == Model.CategoryId ? "selected" : "")>
                <label class="form-check-label">
                    @cat.Name
                </label>
            }
        </div>

        <button type="submit" class="btn btn-primary mt-3">Filtrar</button>
    </div>
}