@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Momon.Biju.Web.Dtos.Products.ProductInListDto

<div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden product-card">
    <div class="position-relative">
        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid bg-info w-100" style="height: 200px; object-fit: cover;">
    </div>

    <div class="card-body d-flex flex-column justify-content-between p-3">
        <div>
            <a href="#" class="text-decoration-none mb-2 d-block">
                <h6 class="text-uppercase mb-1 text-dark fw-semibold">@Model.Name</h6>
            </a>
            <small class="text-muted">@Model.Category?.Name</small><br />
            <span class="mt-2 fw-bold text-primary">R$ @Model.Price</span>
        </div>

        <!-- Buttons always at bottom -->
        <div class="mt-3 d-flex gap-2">
            <a onclick="addToCart('@Model.Id')" class="btn btn-sm btn-outline-primary w-100" tooltips="Adicionar ao carrinho">
                <i class="fa fa-cart-plus me-1"></i>
            </a>
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary w-100">
                Detalhes
            </a>
        </div>
    </div>
</div>
