@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Momon.Biju.Web.Dtos.Products.ProductInListDto

<div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden product-card">
    <div class="position-relative">
        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid bg-info w-100" style="height: 180px; object-fit: cover;">
    </div>

    <div class="card-body d-flex flex-column justify-content-between p-2 p-sm-3">
        <div>
            <a href="#" class="text-decoration-none d-block">
                <h6 class="text-dark fw-semibold text-truncate mb-1" style="font-size: 0.95rem;">
                    @Model.Name
                </h6>
            </a>
            <div class="d-flex justify-content-between align-items-center mb-1">
                <!-- Category -->
                <small class="text-muted">
                    <i class="fa fa-tag me-1"></i> @Model.Category?.Name
                </small>

                <!-- Price -->
                <span class="fw-bold text-primary" style="font-size: 1.1rem;">
                    R$ @Model.Price
                </span>
            </div>

        </div>

        <div class="mt-2 d-flex gap-2">
            <a onclick="addToCart('@Model.Id')" class="btn btn-sm btn-outline-primary w-100" tooltips="Adicionar ao carrinho">
                <i class="fa fa-cart-plus me-1"></i>
            </a>
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary w-100">
                Detalhes
            </a>
        </div>
    </div>
</div>
