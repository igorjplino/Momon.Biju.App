@model UpdateProductViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="card p-4">
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Price)
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Price)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.SelectedCategoryId, "Category")
            @Html.DropDownListFor(m => m.SelectedCategoryId, Model.Categories, "Select Category", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.SelectedSubCategoriesId, "Subcategories")
            @Html.ListBoxFor(m => m.SelectedSubCategoriesId, Model.SubCategories, new { @class = "form-control", size = 6 })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary ms-2">Cancel</a>
    </div>
}
