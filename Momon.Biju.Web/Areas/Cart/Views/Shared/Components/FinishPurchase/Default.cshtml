@model Momon.Biju.Web.Models.DetailsToPurchase

<form asp-area="Cart" asp-controller="Cart" asp-action="FinishPurchase" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comments" class="form-label"></label>
        <textarea asp-for="Comments" class="form-control" rows="3" style="resize:none;"></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>

    <hr />

    <input type="submit" value="Finalizar a compra" class="btn btn-success" />
</form>