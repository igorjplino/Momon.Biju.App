@model List<Momon.Biju.Web.Areas.Cart.Models.CartItem>

<h2>Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-area="Cart" asp-controller="Cart" asp-action="Clear">Clear Cart</a>
}